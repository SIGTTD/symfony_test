{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <h3>
        <a href="{{ path('post_add') }}">Add new post</a>
    </h3>

    {% for post in posts %}
        <p>
            <a href="{{ path('post_show', {'slug': post.slug}) }}">{{ post.title }}</a>
        </p>
    {% endfor %}
{% endblock %}
